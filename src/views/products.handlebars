
<div>
    <div>
        <h1>Hola, {{user.name}}</h1>
        <p>Correo: {{user.email}}</p>
        <button id="logoutButton" >Cerrar Sesi√≥n</button>
    </div>
    <h1>Welcome</h1>
    <h2>List of products para agregar</h2>
    <a href="/carts/6471391c122af8c6505d1374"><button>Go to my Cart</button></a>
    <ul id="products">
        {{#each products}}
         <div class=productCard >
            <h4>id {{this._id}} - {{this.title}}</h4>
            <p>Code: {{this.code}}</p>
            <p>Price: ${{this.price}}</p>
            <p>Stock: {{this.stock}}pz</p>
            <p>Category: {{this.category}}</p>
            <button id="addButton" onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
        </div>  
        {{/each}}
    </ul>
    {{#if hasPrevPage}}
    <a href="/products/?page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}

    {{page}}
    
     {{#if hasNextPage}}
    <a href="products/?page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}
</div>

